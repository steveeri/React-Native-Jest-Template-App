{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": ["es2017"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "__tests__/*", "/src/**/__tests__/*"
    ],
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "tests": ["__tests__/*", "/src/**/__tests__/*"],
      "@components/*": ["src/components/*"]
    }
}
